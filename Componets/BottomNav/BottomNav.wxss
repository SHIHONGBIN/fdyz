.footerNav ul{ display: flex; flex-direction:row; width: 100%;}
.footerNav ul li{ flex: 1; text-align :center; font-size: 20rpx; color:#999; position: relative}
.footerNav ul li image{ height: 45rpx; width: 46rpx; margin: 0 auto;display: block;}
.footerNav ul li:actived,.footerNav ul li.actived{ color:#00cdac}
.footerNav ul li text{ margin-top: 5rpx;}
.footerNav ul li:nth-child(2) image{width: 43rpx; height: 45rpx;}
.footerNav ul li:nth-child(3) image{width: 42rpx; height: 44rpx;}
.order-number{ position: absolute; left:50%; transform: translateX(-50%); top: -8rpx; border-radius: 11rpx; width: 22rpx; height: 22rpx; background-color: #eb6f1d; font-size: 18rpx; color:#fff; line-height: 22rpx; margin-left: 18rpx;}


