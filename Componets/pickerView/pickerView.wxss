.input-box{ border-bottom: solid 1rpx #f4f4f4; min-height: 90rpx; position: relative}
.input-box .icontext{ transform: rotate(90deg); position: absolute; right: 0; top: 20rpx;display: block; font-size: 40rpx; font-family:-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif; transition:all .2s; color:#949799}
.input-box picker{ display: none; background-color: #fff; height:45px;}
.input-box picker view{ height: 45px;}
.input-box picker.show{ display: block}
.input-box .icontext.rotateInit{ transform: rotate(-90deg) translateY(-25%);}
input,.input-view{ height: 90rpx; line-height: 90rpx; font-size: 28rpx;}